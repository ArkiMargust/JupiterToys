<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%-30(%d [%thread]) %-5level %logger{36}.%method - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name = "com.athaydes.spockframework.report" level="error"/>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>